<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <ImageView
            android:id="@+id/image_of_case"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameOfCase"
            android:layout_width="169dp"
            android:layout_height="62dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:maxLines="4"
            android:singleLine="false"
            android:text="Case Product Name"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/image_of_case"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/priceOfCase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:text="Â£160.64"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/addCaseToListButton"
            android:layout_width="73dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:background="@color/titleBar"
            android:text="Add "
            android:textColor="#FFFF"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/priceOfCase" />

        <TextView
            android:id="@+id/caseTypeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Type"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_of_case" />

        <TextView
            android:id="@+id/caseTypeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="ATX Mid Tower"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/caseTypeTitle" />

        <TextView
            android:id="@+id/caseColourTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="108dp"
            android:layout_marginTop="16dp"
            android:text="Colour"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/caseTypeTitle"
            app:layout_constraintTop_toBottomOf="@+id/image_of_case" />

        <TextView
            android:id="@+id/caseColourValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="108dp"
            android:layout_marginTop="8dp"
            android:text="White"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/caseTypeTitle"
            app:layout_constraintTop_toBottomOf="@+id/caseColourTitle" />

        <TextView
            android:id="@+id/caseSidePanelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:text="Side Panel Window"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/caseColourTitle"
            app:layout_constraintTop_toBottomOf="@id/image_of_case" />

        <TextView
            android:id="@+id/caseSidePanelValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:text="Tempered Glass"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/caseColourTitle"
            app:layout_constraintTop_toBottomOf="@+id/caseSidePanelTitle" />

        <TextView
            android:id="@+id/caseInternal3InchBaysTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text='Internal 3.5" Bays'
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/caseTypeValue" />

        <TextView
            android:id="@+id/caseInternal3InchBaysValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="4"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/caseInternal3InchBaysTitle" />

        <TextView
            android:id="@+id/caseInternal2InchBaysTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:text='Internal 2.5" Bays'
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/caseInternal3InchBaysTitle"
            app:layout_constraintTop_toBottomOf="@+id/caseColourValue" />

        <TextView
            android:id="@+id/caseInternal2InchBaysValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:text="2"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/caseInternal3InchBaysTitle"
            app:layout_constraintTop_toBottomOf="@+id/caseInternal2InchBaysTitle" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>